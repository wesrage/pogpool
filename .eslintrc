{
   "parserOptions": {
      "ecmaFeatures": {
         "jsx": true,
         "modules": true
      }
   },
   "env": {
      "browser": true,
      "jest": true,
      "node": true
   },
   "extends": "airbnb",
   "parser": "babel-eslint",
   "plugins": [
      "babel",
      "import",
      "react"
   ],
   "globals": {
      __DEVELOPMENT__: true,
   },
   "rules": {
      "arrow-parens": 0,
      "import/prefer-default-export": 0,
      "indent": [1, 3, { "SwitchCase": 1 }],
      "linebreak-style": 0,
      "no-confusing-arrow": 0,
      "no-nested-ternary": 0,
      "no-use-before-define": 0,
      "react/jsx-indent": [1, 3],
      "react/jsx-space-before-closing": 0,
      "react/jsx-tag-spacing": 0,
      "react/require-default-props": 0
   },
   "settings": {
      "import/resolver": {
         "webpack": {
            "config": "webpack.config.base.js"
         }
      }
   }
}
