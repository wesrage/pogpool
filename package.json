{
  "name": "pogpool",
  "version": "3.1.0",
  "description": "PuckOverGlass Stanley Cup Playoff Pool",
  "license": "ISC",
  "scripts": {
    "start": "concurrently --kill-others \"npm run dev\" \"npm run dev-api\"",
    "build": "better-npm-run build",
    "dev": "better-npm-run dev",
    "dev-api": "better-npm-run dev-api",
    "test": "jest --watch",
    "prod": "better-npm-run prod-api"
  },
  "betterScripts": {
    "dev": {
      "command": "node index",
      "env": {
        "API_HOST": "localhost",
        "API_PORT": 3030,
        "HTTP_PORT": 3000
      }
    },
    "dash": {
      "command": "webpack-dashboard -- node index",
      "env": {
        "API_HOST": "localhost",
        "API_PORT": 3030,
        "HTTP_PORT": 3000
      }
    },
    "dev-api": {
      "command": "node api",
      "env": {
        "API_HOST": "localhost",
        "API_PORT": 3030
      }
    },
    "prod-api": {
      "command": "node api",
      "env": {
        "API_HOST": "localhost",
        "API_PORT": 8080,
        "NODE_ENV": "production"
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config webpack.config.prod.babel.js",
      "env": {
        "API_HOST": "api.pog.esley.ca",
        "API_PORT": 8080,
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wesrage/pogpool.git"
  },
  "moduleRoots": [
    "api",
    "src"
  ],
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "classnames": "^2.2.5",
    "css-loader": "^0.28.11",
    "d3": "^3.5.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.9.0",
    "eslint-plugin-babel": "^5.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "history": "^4.7.2",
    "immer": "^1.2.1",
    "jest": "^22.4.3",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.8.3",
    "piping": "^1.0.0-rc.4",
    "prop-types": "^15.6.1",
    "qhistory": "^1.0.0",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-helmet": "^5.2.0",
    "react-icons": "^2.2.7",
    "react-media": "^1.8.0",
    "react-notification-system": "^0.2.17",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.3.0",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "styled-components": "^3.2.5",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.14",
    "webpack-dev-middleware": "^3.1.0",
    "webpack-hot-middleware": "^2.21.2"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "better-npm-run": "^0.1.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "concurrently": "^3.5.1",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "http-proxy": "^1.16.2",
    "lodash": "^4.17.5",
    "moment": "^2.22.0",
    "monk": "^6.0.5",
    "obex": "^1.2.1",
    "pretty-error": "^2.1.1"
  }
}
